# Environment Configuration for Mechanical Integrity AI System
# Copy this file to .env and update values for your deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
PROJECT_NAME="Mechanical Integrity AI"
APP_VERSION=1.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CRITICAL: Generate a strong secret key for JWT tokens
# Use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here-replace-with-strong-random-value

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
POSTGRES_USER=mechanical_integrity
POSTGRES_PASSWORD=secure-database-password-replace-me
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mechanical_integrity

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OLLAMA LLM SERVICE
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_PARALLEL=1
OLLAMA_MAX_MODELS=1

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png
UPLOAD_DIRECTORY=uploads
REPORTS_DIRECTORY=reports

# =============================================================================
# API 579 SAFETY-CRITICAL PARAMETERS
# =============================================================================
# WARNING: These values affect safety calculations - modify with extreme caution
API579_DEFAULT_SAFETY_FACTOR=0.9
API579_DEFAULT_CORROSION_RATE=0.005

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Grafana admin password
GRAFANA_PASSWORD=secure-grafana-password

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS (only for development)
# =============================================================================
# Uncomment for development environment
# ENVIRONMENT=development
# DEBUG=true
# POSTGRES_PASSWORD=postgres
# SECRET_KEY=dev-secret-key-not-for-production

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
# SSL certificate paths (for production with HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/mechanical-integrity.crt
# SSL_KEY_PATH=/etc/ssl/private/mechanical-integrity.key

# Load balancer and proxy settings
# TRUSTED_PROXIES=172.16.0.0/12,10.0.0.0/8

# Backup settings
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING INTEGRATIONS
# =============================================================================
# Slack notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email notifications (optional)  
# SMTP_SERVER=smtp.yourcompany.com
# SMTP_PORT=587
# SMTP_USER=alerts@yourcompany.com
# SMTP_PASSWORD=smtp-password